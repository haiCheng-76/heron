    <!--    </appender>-->

    <!--基于时间和文件尺寸的轮转-->
    <appender name="SizeAndTimeBasedRollingPolicy" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logPath}/${appName}/heron.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${logPath}/${appName}/%d{yyyyMMddHH}/heron-%i.log</fileNamePattern>
            <maxFileSize>500KB</maxFileSize>
            <maxHistory>20</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="webiste.lhc.heron" level="all" additivity="false">
        <appender-ref ref="rollingFileAppender"></appender-ref>
    </logger>


    <root level="debug">
        <appender-ref ref="STDOUT"></appender-ref>
    </root>
</configuration>
