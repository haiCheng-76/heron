<configuration scan="true" scanPeriod="5 seconds">
    <contextName>heron</contextName>
    <property name="appName" value="heron"/>
    <property name="logPath" value="/mnt/logs"/>


    <timestamp key="bySecond" datePattern="yyyyMMddHH"/>

    <!--控制台日志-->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] %logger{36} [%file:%line] - %msg%n</pattern>
        </encoder>
    </appender>

    <!--基于时间和文件尺寸的轮转-->
    <appender name="rollingFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logPath}/${appName}/heron.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${logPath}/${appName}/%d{yyyyMMddHH}/heron-%i.log</fileNamePattern>
            <maxFileSize>500KB</maxFileSize>
            <maxHistory>20</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="webiste.lhc.heron" level="debug" additivity="false">
        <appender-ref ref="rollingFileAppender"/>
    </logger>


    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
